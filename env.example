# Environment Configuration for ZGX Onboard
# Copy this file to .env and update with your actual values

# Hardware Configuration
DEVICE=cuda  # Options: cuda, cpu, mps (for Apple Silicon)
CUDA_VISIBLE_DEVICES=0

# Model Paths
MODEL_CACHE_DIR=./models/pretrained
CHECKPOINT_DIR=./models/checkpoints

# Data Paths
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed

# Experiment Tracking
# MLflow
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_EXPERIMENT_NAME=zgx-experiments

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs

# Training Configuration
BATCH_SIZE=32
NUM_WORKERS=4
SEED=42

# Reinforcement Learning
RL_ENV_NAME=CartPole-v1
RL_ALGORITHM=PPO

# Model Tuning
TUNING_BACKEND=optuna  # Options: optuna, ray
N_TRIALS=100

# API Keys
# Google Gemini API Key (for LLM-as-a-Judge evaluation)
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:30b
